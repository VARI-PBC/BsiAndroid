<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/requisition_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/requisition_id"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:text="@string/instructions"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/completed_by"
        app:layout_constraintTop_toBottomOf="@+id/requisition_id"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:text="@string/date_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_completed"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="@string/completed_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completed_by"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/date_completed"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="@string/num_vials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_vials"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/completed_by" />

</android.support.constraint.ConstraintLayout>